<resources>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarTheme">@style/ActionBarTheme.ActionMenuStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="actionBarTheme">@style/ActionBarTheme.ActionMenuStyle</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/ActionBarTheme.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <item name="background">@android:color/white</item>
        <item name="titleTextStyle">@style/ActionBarTheme.TitleTextStyle</item>
    </style>

    <style name="ActionBarTheme.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="ActionBarTheme.ActionMenuStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/charcoalGrey</item>

        <!-- Support library compatibility -->
        <item name="colorControlNormal">@color/charcoalGrey</item>
    </style>

    <style name="PrimaryText">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="PrimaryTextBold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="StandardButton" >
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightPaleGrey</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

