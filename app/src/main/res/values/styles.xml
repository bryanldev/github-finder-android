<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="PrimaryText">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="PrimaryTextBold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="StandardButton" >
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightPaleGrey</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

