<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="PrimaryText">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryText.Light">
        <item name="android:textColor">@color/lightPaleGrey</item>
    </style>

    <style name="PrimaryText.Bold">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="PrimaryText.Bold.Light">
        <item name="android:textColor">@color/lightPaleGrey</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightPaleGrey</item>
    </style>

    <style name="StandardButton" >
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RetryButton" >
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

</resources>

